# Marathon Registration Platform Environment Variables
# Copy this file to .env.local and fill in your values

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Database Configuration
# Set to 'true' to use local database in development
IS_LOCAL_DB=false
LOCAL_POSTGRES_URL=http://localhost:54321
LOCAL_POSTGRES_ANON_KEY=local-dev-key

# Application URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Development User (only used when IS_LOCAL_DB=true)
DEV_USER_ID=
DEV_USER_EMAIL=
DEV_USER_ROLE=runner

# Payment Gateway Configuration
CASHFREE_API_URL=https://sandbox.cashfree.com/pg/v1
CASHFREE_APP_ID=
CASHFREE_SECRET_KEY=

# Test User Configuration
# Used by register_test_users_safe.js for creating test accounts
TEST_USER_PASSWORD=

# Security Configuration 
# Set to 'production' in production environments
NODE_ENV=development 